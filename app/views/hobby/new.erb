<h1>Create a Hobby</h1>
<% if logged_in? %>
    <h4><h4 style="color:red;"><%= @error %></h4>
    <form action="/hobbies" method="post">
        <h3>Name:</h3><input type="text" name="name" placeholder="Name"></input>
        <h3>Season:</h3><input type="text" name="season" placeholder="Season"></input>
        <input type="hidden" name="user_id" value="<%= current_user.id %>"></input>
        <input type="submit" value="Create Hobby"></input>
    </form><br><br>
<% else %>
    <h4>You are not logged in!</h4><br><br>
<% end %>
<a href="/hobbies">Back to all hobbies</a><br><br>