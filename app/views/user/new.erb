<h1>Sign Up</h1>
<% if @errors %>
    <h4><h4 style="color:red;">
    <ul><% @errors.each do |error| %>
           <li><%= error %></li>
        <%end%></ul>
    </h4>
<% end %>
<form action="/signup" method="post">
    <h3>Name:</h3><input type="text" name="name" placeholder="Name"></input>
    <h3>Email:</h3><input type="email" name="email" placeholder="Email"></input>
    <h3>Password:</h3><input type="password" name="password" placeholder="Password"></input><br>
    <br>
    <input type="submit" value="Sign Up">
</form> <br>Already have an account? <br>
<a href="/login">Log In</a>